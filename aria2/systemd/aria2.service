[Unit]
Description=Aria2 Service
After=network.target

[Service]
WorkingDirectory=%h/.config/aria2
Environmente="ARIA2_RPC_SECRET=aria2c"
EnvironmentFile=-%h/.config/systemd/aria2-env.conf
ExecStart=/usr/bin/aria2c --rpc-secret=${ARIA2_RPC_SECRET} --conf-path=aria2.daemon

[Install]
WantedBy=default.target
